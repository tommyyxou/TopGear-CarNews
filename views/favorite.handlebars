<a href="/Car-news"><h1>Home</h1></a>
{{#each data}}
<section>
   <div class="row">
      <div class="col">
         <div class="post-preview">
            <a href="https://www.topgear.com{{this.HeadlineURL}}" target="_blank" >
               <img alt="IMAGE NULL" srcset="{{this.ImageURL}}">
                  <h2 class="post-title">
                     {{this.Headline}}
                  </h2>
               </img>
            </a>
            <div class="row">
               <div class="col-10">
                  <h6 class="post-subtitle" style="font-size: smaller">
                     {{this.Description}}
                  </h6>
                  <p class="post-meta" style="margin-top:10px;font-size:smaller;color:grey">
                     Post by {{this.Author}} on {{this.PostDate}}, via https://www.topgear.com/car-news
                  </p>
               </div>
               <div class="col-2">
                  <!-- Trigger the modal with a button -->
                  <button type="button" class="btn btn-info btn-md" style="border-radius: 1vw;"data-toggle="modal" data-target="#myModal{{this._id}}">comment</button>
               </div>
            </div>

            <!-- Modal -->
            <div id="myModal{{this._id}}" class="modal fade" role="dialog">
               <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                     <div class="modal-header">
                        <h4 class="modal-title">Leave a comment</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                     </div>
                     <div class="modal-body">
                        <ul>
                           {{#each this.Comments}}
                              <hr>
                              <li class="comment">
                                 <p>{{this.Comment}}</p>
                                 <hr>
                                 <span class="post-meta" style="font-size:x-small;color:grey">By: {{this.Author}} on {{this.PostDate}}</span>
                              </li>
                              <hr>
                           {{/each}}
                        </ul>
                        <form action="/comment/{{this.Headline}}" method="post" id="commentModal{{this._id}}">
                           <label for="author">Username:</label><br>
                           <input type="text" name="author" id="author" placeholder="Anonymous"><br>
                           <label for="comment">Comment:</label>
                           <textarea name="comment" id="comment" rows="3" style="width:100%"></textarea>
                        </form>
                     </div>
                     <div class="modal-footer">
                        <button type="submit" class="btn btn-default" form="commentModal{{this._id}}">Submit</button>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <hr>
      </div>
   </div>
</section>
{{/each}}

<script>
var coll = document.getElementsByClassName("collapsible");
var i;

for (i = 0; i < coll.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content = this.nextElementSibling;
    if (content.style.display === "block") {
      content.style.display = "none";
    } else {
      content.style.display = "block";
    }
  });
}
</script>