<a href="/favorite"><h1>Favorite</h1></a>
{{#each data}}
<section>
   <div class="row">
      <div class="col">
         <div class="post-preview">
            <a href="https://www.topgear.com{{this.HeadlineURL}}" target="_blank" >
               <img alt="IMAGE NULL" srcset="{{this.ImageURL}}">
                  <h2 class="post-title">
                     {{this.Headline}}
                  </h2>
               </img>
            </a>
            <div class="row">
               <div class="col-10">
                  <h6 class="post-subtitle" style="font-size: smaller">
                     {{this.Description}}
                  </h6>
                  <p class="post-meta" style="margin-top:10px;font-size:smaller;color:grey">
                     Post by {{this.Author}} on {{this.PostDate}}, via https://www.topgear.com/car-news
                  </p>
               </div>
               <div class="col-2">
                  <form action="/favorite/{{this._id}}/{{this.Headline}}" method="post">
                     <button type="submit" class="btn btn-info btn-md" style="border-radius: 1vw;">Favorite</button>
                  </form>
               </div>
            </div>
         </div>
         <hr>
      </div>
   </div>
</section>
{{/each}}